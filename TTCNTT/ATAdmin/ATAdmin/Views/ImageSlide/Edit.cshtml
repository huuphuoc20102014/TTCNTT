@model ImageSlideEditViewModel


@{
    ViewData["Title"] = "Hình Slide";
}


    <h4>Sửa Thông Tin Hình Slide</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-md-3 text-md-right ">
        </div>
        <div class="col-md-7">
            <input type="submit" value="Lưu" class="btn btn-primary" />
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Xóa</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Tải lại</a>
            <a asp-action="Details" asp-route-id="@Model.Id" class="k-button">Chi tiết</a>
            <a asp-action="Index" class="k-button">Trở lại</a>
        </div>
    </div>
    <input type="hidden" name="Id" value="@Model?.Id" />
    <input type="hidden" asp-for="RowVersion" />

    <div class="row form-group">
        <div class="col-md-3 text-md-right ">
            <label asp-for="Thumbnail" class="col-form-label">Hình ảnh</label>
            <span class="text-danger">*</span>
        </div>
        <div class="col-md-7">
            <button id="btnChooseImage_Thumbnail" class="btn mb-1">Chọn hình</button>
            <input style="display:none;" asp-for="Thumbnail" />
            <img width="200" class="border border-primary" id="img_Thumbnail" src="~/Image/@Url.Content(Model?.Thumbnail)" />
        </div>
        <div class="offset-md-3 col-md-7 at-wrapper-validate">
            <span asp-validation-for="Thumbnail" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-3 text-md-right ">
            <label asp-for="Name" class="col-form-label">Tên</label>
            <span class="text-danger">*</span>
        </div>
        <div class="col-md-7">
            <input asp-for="Name" class="k-textbox form-control" />
        </div>
        <div class="offset-md-3 col-md-7 at-wrapper-validate">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group slugName">
        <div class="col-md-3 text-md-right ">
            <label asp-for="SlugName" class="col-form-label">SEO</label>
            <span class="text-danger">*</span>
        </div>
        <div class="col-md-7">
