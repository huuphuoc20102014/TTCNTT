    <link rel="shortcut icon" href="~/img/logo.png">
    <link rel="stylesheet" href="~/lib/regular.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome.min.css" />
    <link rel="stylesheet" href="~/lib/kendo.bootstrap-v4.min.css" />
