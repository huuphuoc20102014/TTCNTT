@inject TTCNTT.Efs.Context.WebTTCNTTContext context
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trung Tâm Công Nghệ Thông Tin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Thư viện template -->
    <link rel="shortcut icon" href="~/template/img/favicon.ico">

    <!-- Core CSS -->
    <link href="~/template/css/bootstrap.css" rel="stylesheet" />
    <link href="~/template/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/template/css/animate.min.css" rel="stylesheet" />
    <link href="~/template/css/flexslider.css" rel="stylesheet" />
    <link href="~/template/css/style.css" rel="stylesheet" />

    <link href="~/css/Validate.css" rel="stylesheet" /><!--Validate-->
    @RenderSection("Css", false)
</head>
<body>

    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v5.0"></script>

    @{
        var headerModel = await TTCNTT.Helpers.SettingValueHelper.GetValueSetting(context);
        <partial name="_header" model="headerModel" />
    }

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    @{
        var footerModel = await TTCNTT.Helpers.SettingValueHelper.GetValueSetting(context);
        <partial name="_footer" model="footerModel" />
    }



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- lbr JS -->
    <script src="~/template/js/jquery.js"></script>
    <script src="~/template/js/jquery.particleground.js"></script><!-- Particle Header Js -->
    <script src="~/template/js/particle.js"></script><!-- Particle Header Js -->
    <script src="~/template/js/owl.carousel.js"></script><!-- Owl Carousel Js -->
    <script src="~/template/js/owl-carousel-settings.js"></script><!-- Owl Carousel Settings Js -->
    <script src="~/template/js/jquery.flexslider.js"></script><!-- Flexslider Settings Js -->
    <script src="~/template/js/mini-grid.js"></script><!-- Mini Master Grid Js -->
    <script src="~/template/js/settings.js"></script><!-- Settings Js -->
    <script src="~/template/js/bootstrap.js"></script><!-- Bootstrap Js -->
    <script src="~/template/js/featherlight.min.js"></script><!-- Feather-Lightbox (projects) Js -->
    <script src="~/template/js/forms.js"></script><!-- Form Js -->
    <script src="~/template/js/animation.js"></script><!-- Animation Js -->
    <!-- CustomerRegister -->
    <script>
        var _urlCustomerRegister = '@Url.Action("NewCustomerRegister", "Home")';
    </script>
    <script src="~/js/CustomerRegister.js"></script>

    <!-- Validate -->
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
