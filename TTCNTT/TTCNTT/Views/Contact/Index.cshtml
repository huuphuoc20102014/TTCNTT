@model ContactViewModel

@{
    ViewBag.Title = Model.setting.CONTACT;
}

<section class="banner-sec">
    <div class="main-banner inner" style=" background:url(../Image/@Model.setting.IMAGESLIDE) no-repeat top center fixed;">
        <a href="#" name="scroll-top-div"></a>
        <div class="overlay-mask">
            <!-- Start:Slider area -->
            <div class="container">
                <h1>@Model.setting.CONTACT</h1>
                <h6>@Model.setting.CONTACT_SLOGAN </h6>
                <hr>
            </div>
            <!-- End:Slider area -->
        </div>
    </div>
</section>

<section class="contact-area-outer">
    <div class="contact-form-sec ">
        <!-- Start: Form Area -->
        <div class="container">
            <div class="content-area clearfix">
                <div class="main-title">

                    <h1>@Model.setting.CONTACT</h1>
                </div>
                <div class="form-sec">
                    <form id="ContactForm" method="post">
                        <div class="col-md-4 ">
                            <input id="Name" type="text" name="Name" placeholder="Tên của bạn*" class="text-field-box" maxlength="50" >
                        </div>
                        <div class="col-md-4 ">
                            <input id="Email" type="email" name="Email" placeholder="Email*" class="text-field-box" maxlength="50" >
                        </div>
                        <div class="col-md-4 ">
                            <input id="Phone" type="number" name="Phone" placeholder="Số điện thoại*" class="text-field-box" min="0" maxlength="20" onkeydown="return event.keyCode !== 69" oninput="validity.valid||(value='');" >
                        </div>
                        <div class="col-md-12 ">
                            <textarea id="Body" name="Body" class="text-field-box" placeholder="Nội dung*" maxlength="1000" ></textarea>
                            <input id="contact-submit" type="submit" class="button-medium" value="Gửi ngay" />
                        </div>
                        <span>(*): Bắt buộc</span>
                        @if (TempData["LienHe"] != null)
                        {
                            <div id="contact-success">
                                @TempData["LienHe"]
                            </div>
                        }
                        <div class="error-item">
                            <div id="contact-loading" style="display: none;"> Đang gửi Email... </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>
        <!-- End: Form Area -->
    </div>
    <!-- Start:Map Area -->
    <div class="map-area">
        <div id="map" style="text-align:center;">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.5293693686504!2d106.77411361416137!3d10.847282860849482!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175270b813ba433%3A0xfda08382cc4ef5a2!2zNTAgTMOqIFbEg24gVmnhu4d0LCBIaeG7h3AgUGjDuiwgUXXhuq1uIDksIEjhu5MgQ2jDrSBNaW5oLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1569300568212!5m2!1svi!2s" width="1200" height="500" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
        </div>
    </div>

</section>

@section scripts{
    <script>
        var _urlContact = '@Url.Action("NewContact", "Contact")';
    </script>
    <script src="~/js/contact.js"></script>

}
