<section class="testimonial-area-outer">
    <div class="testimonial-sec" style="background:url(../images/setting/cmt.jpg) no-repeat center center fixed;
         background-size:cover;">
        <div class="overlay">
            <div class="container">
                <div class="content-area">
                    <div class="main-title">
                        <h5>Những nhân viên nổi bật</h5>
                        <h2>Và những suy nghĩ của họ.</h2>
                    </div>
                    <div class="testimonial-slider-sec ">
                        <div id="demo">
                            <div id="testimonial-slider" class="owl-carousel">
                                @foreach (var item in Model.listEmployee.Take(4))
                                {
                                    <div class="item">
                                        <div class="testimonial-box">
                                            <div class="author">
                                                <img src="~/Image/@item.ImageSlug" alt="">
                                            </div>
                                            <div class="comment">
                                                <h5>@item.Name</h5>
                                                <span>@item.CreatedDate</span>
                                                <p>
                                                    “ @item.LongDescription_Html. ”
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                }


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>






