@model EmployeeViewModel
@inject TTCNTT.Efs.Context.WebTTCNTTContext context

@{
    ViewBag.Title = Model.employeeType.Name;
}

@{
    var bannerModel = await TTCNTT.Helpers.SettingValueHelper.GetValueSetting(context);
    <partial name="_BannerPartial" model="bannerModel" />
}

<section class="blog-outer-area">
    <div class="content-area">
        <div class="blog-area-sec">
            <!-- Start: Blog Sec -->
            <div class="container">
                <div class="col-md-12">
                    <div class="main-title">
                        <h5>Giảng Viên</h5>
                        <h2>Danh Sách Giảng Viên</h2>
                    </div>
                </div>
            </div>

            <div class="blog-sec">
                <div class="container">
                    <!-- Start:Blog Area -->
                    <div class="blog-main-area">
                        <!-- Start:Blog Items (With Mini Grid) -->
                        <div class="mini-grid-area">
                            @foreach (var item in Model.listEmployee)
                            {
                                <div class="col-md-4">
                                    <div class="team-member">
                                        <div class="team-member-box">
                                            <div class="image-holder">
                                                <a href="~/Employee/EmployeeDetail/@item.Slug_Name">
                                                    <img src="~/Images/Employee/@item.ImageSlug" alt="@item.Name">
                                                </a>
                                            </div>
                                            <div class="text-box">
                                                <h6>@item.Specialize</h6>
                                                <h5><a href="~/Employee/EmployeeDetail/@item.Slug_Name">@item.Name</a> </h5>
                                                <hr>
                                                <p id="tt-employee-detail">@item.ShortDescription_Html. </p>

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                        <!-- End:Blog Items (With Mini Grid) -->
                        <!-- Start:Pagination -->
                        <div class="pagination-area">
                            <ul class="pagination">
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">...</a></li>
                                <li class="page-item"><a class="page-link" href="#">15</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- End:Pagination -->

                    </div>
                    <!-- End:Blog Area -->
                </div>
            </div>
            <!-- End: Blog Sec -->

        </div>
    </div>
</section>

