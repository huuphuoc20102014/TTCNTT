@model EmployeeViewModel

@{
    ViewBag.Title = Model.employeeType.Name;
}

<section class="banner-sec">
    <div class="main-banner inner" style=" background:url(img/banner-bg.jpg) no-repeat top center fixed; background-size:cover;">
        <a href="#" name="scroll-top-div"></a>
        <div class="overlay-mask">
            <!-- Start:Slider area -->
            <div class="container">
                <h1>@Model.employeeType.Name</h1>
                <h6>Cán Bộ Giảng Viên.</h6>
                <hr>
            </div>
            <!-- End:Slider area -->
        </div>
    </div>
</section>

<section class="blog-outer-area">
    <div class="content-area">
        <div class="blog-area-sec">
            <!-- Start: Blog Sec -->
            <div class="container">
                <div class="col-md-12">
                    <div class="main-title">
                        <h5>Giảng Viên</h5>
                        <h2>Danh Sách Giảng Viên</h2>
                    </div>
                </div>
            </div>

            <div class="blog-sec">
                <div class="container">
                    <!-- Start:Blog Area -->
                    <div class="blog-main-area">
                        <!-- Start:Blog Items (With Mini Grid) -->
                        <div class="mini-grid-area">
                            @foreach (var item in Model.listEmployee)
                            {
                                @*<div class="col-md-4 ">
                                    <div class="item-box">
                                        <a href="~/Employee/EmployeeDetail/@item.Slug_Name" class=" img-holder">
                                            <img src="~/Images/Employee/@item.ImageSlug" alt="@item.Name">
                                            <div class="mask"></div>
                                        </a>
                                        <div class="info-text-holder">
                                            <h6><a href="~/Employee/EmployeeDetail/@item.Slug_Name">@item.Name.</a></h6>
                                            <span><a href="~/Employee/EmployeeDetail/@item.Slug_Name">@item.Specialize</a></span>
                                            <p>@item.ShortDescription_Html. </p>
                                            <a href="~/Employee/EmployeeDetail/@item.Slug_Name" class="button-medium">TÌM HIỂU THÊM</a>
                                        </div>
                                    </div>
                                </div>*@

                                <div class="col-md-4">
                                    <div class="team-member">
                                        <div class="team-member-box">
                                            <div class="image-holder">
                                                <a href="~/Employee/EmployeeDetail/@item.Slug_Name">
                                                    <img src="~/Images/Employee/@item.ImageSlug" alt="@item.Name">
                                                </a>
                                            </div>
                                            <div class="text-box">
                                                <h6>@item.Specialize</h6>
                                                <h5><a href="~/Employee/EmployeeDetail/@item.Slug_Name">@item.Name</a> </h5>
                                                <hr>
                                                <p id="tt-employee-detail">@item.ShortDescription_Html. </p>

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                        <!-- End:Blog Items (With Mini Grid) -->
                        <!-- Start:Pagination -->
                        <div class="pagination-area">
                            <ul class="pagination">
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">...</a></li>
                                <li class="page-item"><a class="page-link" href="#">15</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- End:Pagination -->

                    </div>
                    <!-- End:Blog Area -->
                </div>
            </div>
            <!-- End: Blog Sec -->

        </div>
    </div>
</section>

